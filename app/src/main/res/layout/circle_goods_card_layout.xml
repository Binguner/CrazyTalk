<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/circle_goods_card_layout"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_goods_avatar"
            android:src="@mipmap/head1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/circle_goods_name"
            android:text="Binguenr"
            app:layout_constraintTop_toTopOf="@id/circle_goods_avatar"
            app:layout_constraintStart_toEndOf="@id/circle_goods_avatar"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/colorOrange"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/circle_goods_published_time"
            android:text="2018/4/12 15:49"
            app:layout_constraintTop_toBottomOf="@id/circle_goods_name"
            app:layout_constraintStart_toEndOf="@id/circle_goods_avatar"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/circle_goods_more"
            android:src="@drawable/ic_arrow_drop_down_grey_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/circle_goods_content"
            app:layout_constraintTop_toBottomOf="@id/circle_goods_published_time"
            app:layout_constraintStart_toEndOf="@id/circle_goods_avatar"
            app:layout_constraintEnd_toEndOf="@id/circle_goods_more"
            android:layout_marginEnd="@dimen/dp_10"
            android:maxLines="20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/good_demo_string"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/circle_goods_read_more"
            app:layout_constraintTop_toBottomOf="@id/circle_goods_content"
            app:layout_constraintStart_toStartOf="@id/circle_goods_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/colorBlueLittle"
            android:text="查看全文 >"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/circle_goods_like"
            android:src="@drawable/ic_thumb_up_outline_grey600_18dp"
            app:layout_constraintTop_toBottomOf="@id/circle_goods_read_more"
            app:layout_constraintStart_toStartOf="@id/circle_goods_read_more"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/circle_goods_comment"
            android:src="@drawable/ic_comment_text_outline_grey600_18dp"
            app:layout_constraintTop_toBottomOf="@id/circle_goods_read_more"
            android:layout_marginTop="@dimen/dp_4"
            app:layout_constraintStart_toEndOf="@id/circle_goods_like"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/circle_goods_send"
            app:layout_constraintTop_toTopOf="@id/circle_goods_comment"
            app:layout_constraintStart_toEndOf="@id/circle_goods_comment"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/ic_send_grey600_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
