<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/friend_cicle_constrantlayout"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_circle_avatar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/head1"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/friend_cicle_person_name"
        android:text="Binguner"
        android:textColor="@color/colorTextBlack"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@id/friend_circle_avatar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/left_curly"
        android:text="("
        android:textColor="@color/colorTextGray"
        app:layout_constraintStart_toEndOf="@id/friend_cicle_person_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/friend_cicle_circle_name"
        android:text="瓦坎达"
        android:textColor="@color/colorTextGray"
        app:layout_constraintStart_toEndOf="@id/left_curly"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/right_curly"
        android:text=")"
        android:textColor="@color/colorTextGray"
        app:layout_constraintStart_toEndOf="@id/friend_cicle_circle_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/friend_cicle_content"
        app:layout_constraintTop_toBottomOf="@id/friend_cicle_person_name"
        app:layout_constraintStart_toEndOf="@id/friend_circle_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:ellipsize="end"
        android:lines="3"
        android:text="@string/friend_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/friend_cicle_imageview_group"
        app:layout_constraintTop_toBottomOf="@id/friend_cicle_content"
        app:layout_constraintStart_toEndOf="@id/friend_circle_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/friend_cicle_image1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/friend_cicle_image2"
            android:src="@mipmap/demo1"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/friend_cicle_image2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/friend_cicle_image1"
            app:layout_constraintEnd_toStartOf="@id/friend_cicle_image3"
            android:src="@mipmap/demo2"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/friend_cicle_image3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/friend_cicle_image2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:src="@mipmap/demo3"
            android:layout_width="0dp"
            android:layout_height="100dp" />


        <ImageView
            android:id="@+id/friend_cicle_image4"
            app:layout_constraintTop_toBottomOf="@id/friend_cicle_image1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/friend_cicle_image5"
            android:src="@mipmap/demo4"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/friend_cicle_image5"
            app:layout_constraintTop_toBottomOf="@id/friend_cicle_image2"
            app:layout_constraintStart_toEndOf="@id/friend_cicle_image4"
            app:layout_constraintEnd_toStartOf="@id/friend_cicle_image6"
            android:src="@mipmap/demo5"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/friend_cicle_image6"
            app:layout_constraintTop_toBottomOf="@id/friend_cicle_image3"
            app:layout_constraintStart_toEndOf="@id/friend_cicle_image5"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/demo2"
            android:layout_width="0dp"
            android:layout_height="100dp" />



    </android.support.constraint.ConstraintLayout>




    <ImageView
        android:id="@+id/friend_cicle_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorTextColorNormal"
        android:layout_width="match_parent"
        android:layout_marginBottom="-11dp"
        android:layout_height="2dp" />






</android.support.constraint.ConstraintLayout>
