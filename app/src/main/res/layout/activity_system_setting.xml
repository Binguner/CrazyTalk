<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    tools:context=".UI.SystemSettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/system_setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/system_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:paddingEnd="20dp"
            android:paddingStart="@dimen/dp_10"
            android:src="@drawable/ic_keyboard_back_black_24dp" />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/system_setting_shadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:src="@drawable/shadow_below_toolbar"
        app:layout_constraintTop_toBottomOf="@id/system_setting_toolbar" />


    <Button
        android:id="@+id/system_setting_check_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:gravity="left|center_vertical"

        android:paddingStart="@dimen/dp_10"
        android:text="检查更新"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/system_setting_shadow" />


    <Button
        android:id="@+id/system_setting_give_a_good_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:gravity="left|center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:text="给个好评"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/system_setting_check_update"
        android:layout_marginTop="@dimen/dp_10"
        />

    <Button
        android:id="@+id/system_setting_invite_friends"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:gravity="left|center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:text="邀请好友"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/system_setting_give_a_good_comment"
        android:layout_marginTop="@dimen/dp_10"
        />

    <Button
        android:id="@+id/system_setting_give_advice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:gravity="left|center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:text="意见反馈"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/system_setting_invite_friends"
        android:layout_marginTop="@dimen/dp_10"
        />
    <Button
        android:id="@+id/system_setting_cancel_loin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:gravity="left|center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:text="退出当前账号"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/system_setting_give_advice"
        android:layout_marginTop="@dimen/dp_10"
        />


</android.support.constraint.ConstraintLayout>