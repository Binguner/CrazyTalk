<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/pop_search_circle_edittext"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="搜索关键字或圈子号"
        android:theme="@style/MyEditTextStyle"
        android:drawableRight="@drawable/ic_search_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/pop_search_circle_choose_age_icon"
        app:layout_constraintTop_toBottomOf="@id/pop_search_circle_edittext"
        android:src="@drawable/ic_dice_d20_grey600_24dp"
        app:layout_constraintStart_toStartOf="@id/pop_search_circle_edittext"
        app:layout_constraintBottom_toBottomOf="@id/pop_search_circle_choose_age_btn1"
        app:layout_constraintEnd_toStartOf="@id/pop_search_circle_choose_age_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pop_search_circle_choose_age_btn1"
        app:layout_constraintTop_toBottomOf="@id/pop_search_circle_edittext"
        app:layout_constraintStart_toEndOf="@id/pop_search_circle_choose_age_icon"
        app:layout_constraintEnd_toStartOf="@id/pop_search_circle_choose_age_btn2"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/colorTextGrey"
        android:gravity="left|center"
        android:background="@color/colorTransparent"
        android:text="年龄组"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pop_search_circle_choose_age_btn2"
        app:layout_constraintTop_toBottomOf="@id/pop_search_circle_edittext"
        app:layout_constraintStart_toEndOf="@id/pop_search_circle_choose_age_btn1"
        app:layout_constraintEnd_toEndOf="@id/pop_search_circle_edittext"
        android:text="不限"
        android:gravity="right|center"
        android:drawableRight="@drawable/ic_arrow_drop_down_grey_24dp"
        android:paddingEnd="0dp"
        android:background="@color/colorTransparent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/pop_search_circle_choose_place_icon"
        app:layout_constraintTop_toTopOf="@id/pop_search_circle_choose_place_btn1"
        app:layout_constraintBottom_toBottomOf="@id/pop_search_circle_choose_place_btn1"
        android:src="@drawable/ic_pin_drop_grey_500_24dp"
        app:layout_constraintStart_toStartOf="@id/pop_search_circle_choose_age_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pop_search_circle_choose_place_btn1"
        app:layout_constraintTop_toBottomOf="@id/pop_search_circle_choose_age_btn1"
        app:layout_constraintStart_toStartOf="@id/pop_search_circle_choose_age_btn1"
        android:layout_width="0dp"
        android:text="地区"
        android:textColor="@color/colorTextGrey"
        android:background="@color/colorTransparent"
        android:gravity="left|center"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/pop_search_circle_choose_place_btn2"
        app:layout_constraintTop_toBottomOf="@id/pop_search_circle_choose_age_btn2"
        app:layout_constraintStart_toEndOf="@id/pop_search_circle_choose_place_btn1"
        android:text="不限"
        android:drawableRight="@drawable/ic_arrow_drop_down_grey_24dp"
        android:background="@color/colorTransparent"
        app:layout_constraintEnd_toEndOf="@id/pop_search_circle_edittext"
        android:gravity="right|center"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/pop_search_circle_choose_hobby_icon"
        app:layout_constraintStart_toStartOf="@id/pop_search_circle_choose_place_icon"
        android:src="@drawable/ic_favorite_grey_500_24dp"
        app:layout_constraintTop_toTopOf="@id/pop_search_circle_choose_hobby_btn1"
        app:layout_constraintBottom_toBottomOf="@id/pop_search_circle_choose_hobby_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pop_search_circle_choose_hobby_btn1"
        app:layout_constraintTop_toBottomOf="@id/pop_search_circle_choose_place_btn1"
        app:layout_constraintStart_toStartOf="@id/pop_search_circle_choose_place_btn1"
        android:text="兴趣"
        android:background="@color/colorTransparent"
        android:textColor="@color/colorTextGrey"
        android:gravity="center|left"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/pop_search_circle_choose_hobby_btn2"
        app:layout_constraintTop_toBottomOf="@id/pop_search_circle_choose_place_btn2"
        app:layout_constraintStart_toEndOf="@id/pop_search_circle_choose_hobby_btn1"
        app:layout_constraintEnd_toEndOf="@id/pop_search_circle_choose_place_btn2"
        android:text="不限"
        android:drawableRight="@drawable/ic_arrow_drop_down_grey_24dp"
        android:gravity="center|right"
        android:background="@color/colorTransparent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pop_search_circle_choose_age_place_hobby_restart"
        app:layout_constraintStart_toStartOf="@id/pop_search_circle_choose_hobby_icon"
        app:layout_constraintEnd_toStartOf="@id/pop_search_circle_choose_age_place_hobby_ok"
        app:layout_constraintTop_toBottomOf="@id/pop_search_circle_choose_hobby_btn1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="0dp"
        android:text="重置"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pop_search_circle_choose_age_place_hobby_ok"
        app:layout_constraintTop_toBottomOf="@id/pop_search_circle_choose_hobby_btn2"
        app:layout_constraintStart_toEndOf="@id/pop_search_circle_choose_age_place_hobby_restart"
        app:layout_constraintEnd_toEndOf="@id/pop_search_circle_choose_hobby_btn2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="好的"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />




</android.support.constraint.ConstraintLayout>
