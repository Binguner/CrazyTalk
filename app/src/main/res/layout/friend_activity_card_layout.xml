<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_marginBottom="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/friend_activity_flag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_flag_cyan_700_24dp"/>

    <TextView
        android:id="@+id/friend_activity_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/friend_activity_flag"
        android:text="大家一起去郊游"
        android:textColor="@color/colorTextBlack"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/friend_activity_left_curly"
        android:text="("
        app:layout_constraintStart_toEndOf="@id/friend_activity_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/friend_activity_circle_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/friend_activity_left_curly"
        android:text="瓦坎达"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/friend_activity_right_curly"
        android:text=")"
        app:layout_constraintStart_toEndOf="@id/friend_activity_circle_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/friend_activity_time_shijian"
        app:layout_constraintTop_toBottomOf="@id/friend_activity_circle_name"
        app:layout_constraintStart_toStartOf="@id/friend_activity_name"
        android:layout_marginTop="@dimen/dp_4"
        android:text="时间："
        android:textColor="@color/colorTextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/friend_activity_time"
        android:text="2017 年 3 月 3 日 周日 17:00~19:00"
        app:layout_constraintTop_toBottomOf="@id/friend_activity_circle_name"
        app:layout_constraintStart_toEndOf="@id/friend_activity_time_shijian"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/friend_activity_place_didian"
        app:layout_constraintTop_toBottomOf="@id/friend_activity_time_shijian"
        app:layout_constraintStart_toStartOf="@id/friend_activity_time_shijian"
        android:layout_marginTop="@dimen/dp_4"
        android:text="地点："
        android:textColor="@color/colorTextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/friend_activity_place"
        app:layout_constraintTop_toBottomOf="@id/friend_activity_time"
        app:layout_constraintStart_toEndOf="@id/friend_activity_time_shijian"
        android:text="乌金山"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/friend_activity_holder_faqiren"
        app:layout_constraintTop_toBottomOf="@id/friend_activity_place_didian"
        app:layout_constraintStart_toStartOf="@id/friend_activity_place_didian"
        android:textColor="@color/colorTextBlack"
        android:layout_marginTop="@dimen/dp_4"
        android:text="发起人："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/friend_activity_holder"
        app:layout_constraintTop_toBottomOf="@id/friend_activity_place"
        app:layout_constraintStart_toEndOf="@id/friend_activity_holder_faqiren"
        android:layout_marginTop="@dimen/dp_4"
        android:text="Binguner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/friend_activity_holder_call"
        app:layout_constraintTop_toBottomOf="@id/friend_activity_place"
        app:layout_constraintStart_toEndOf="@id/friend_activity_holder"
        android:layout_marginTop="3dp"
        android:layout_marginStart="@dimen/dp_4"
        android:src="@drawable/ic_call_cyan_700_24dp"
        android:layout_width="16dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/friend_activity_particpator_icon"
        app:layout_constraintTop_toBottomOf="@id/friend_activity_holder_faqiren"
        app:layout_constraintStart_toStartOf="@id/friend_activity_holder_faqiren"
        android:layout_marginTop="@dimen/dp_4"
        android:src="@drawable/ic_people_cyan_700_24dp"
        android:layout_width="16dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/friend_activity_particpator_number"
        app:layout_constraintTop_toBottomOf="@id/friend_activity_holder"
        app:layout_constraintStart_toEndOf="@id/friend_activity_particpator_icon"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:text="12/13 人确认参加"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>
