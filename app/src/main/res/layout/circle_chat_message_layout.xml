<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_chat_avator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="8dp"
        android:src="@mipmap/head1"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/circle_chat_left_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="@dimen/dp_10"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:maxWidth="300dp"
        android:background="@drawable/left_message"
        android:text="这是左边的消息！"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/circle_chat_avator"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/circle_chat_right_message"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="20dp"
        android:background="@drawable/right_message"
        android:text="这是左边的消息！"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
