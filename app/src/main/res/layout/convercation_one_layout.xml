<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/convercation_layout_avatar"
        android:layout_marginStart="@dimen/dp_40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/head1"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40" />
    <TextView
        android:id="@+id/convercation_layout_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/convercation_layout_avatar"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/colorTextBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="这是群名字或者人的名字"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:background="@color/colorTextGrayAlittle"
        app:layout_constraintTop_toBottomOf="@id/convercation_layout_name"
        app:layout_constraintStart_toStartOf="@id/convercation_layout_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


</android.support.constraint.ConstraintLayout>
